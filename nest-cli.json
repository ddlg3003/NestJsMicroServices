{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/advanced-todo/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/advanced-todo/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/advanced-todo",
  "projects": {
    "advanced-todo": {
      "type": "application",
      "root": "apps/advanced-todo",
      "entryFile": "main",
      "sourceRoot": "apps/advanced-todo/src",
      "compilerOptions": {
        "tsConfigPath": "apps/advanced-todo/tsconfig.app.json",
        "plugins": ["@nestjs/swagger"]
      }
    },
    "worker": {
      "type": "application",
      "root": "apps/worker",
      "entryFile": "main",
      "sourceRoot": "apps/worker/src",
      "compilerOptions": {
        "tsConfigPath": "apps/worker/tsconfig.app.json"
      }
    },
    "worker-update": {
      "type": "application",
      "root": "apps/worker-update",
      "entryFile": "main",
      "sourceRoot": "apps/worker-update/src",
      "compilerOptions": {
        "tsConfigPath": "apps/worker-update/tsconfig.app.json"
      }
    }
  }
}